{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "auction-plugin/auction-countdown",
    "title": "Auction Countdown",
    "category": "widgets",
    "icon": "clock",
    "description": "Displays a countdown to the auction end time.",
    "keywords": [
        "auction",
        "countdown",
        "timer"
    ],
    "version": "1.0.0",
    "textdomain": "auction-plugin",
    "editorScript": "file:./index.js",
    "attributes": {
        "auction_id": {
            "type": "string",
            "default": ""
        },
        "marginTop": {
            "type": "number",
            "default": 0
        },
        "marginBottom": {
            "type": "number",
            "default": 0
        },
        "padding": {
            "type": "number",
            "default": 0
        },
        "fontSize": {
            "type": "number",
            "default": 12
        }
    },
    "script": "file:./frontend.js",
    "style": "file:./index.css"
}